<script type="text/javascript">
    $(function() {
        var myConfig = { dompath: true };
        var ids = [<%= ids.map{|id| "'#{id}'"}.join(', ') %>]
        $.each(ids, function(index, id) {
            if ($('textarea#' + id).length) {
                tinyMCE.init({
                    mode : "exact",
                    elements : id,
                    theme : "advanced",
                    language : '<%= I18n.locale.to_s.split('-')[0].downcase %>',
                    skin : "o2k7",

                    content_css: "/assets/tinymce_werdau.css",
                    style_formats: [
                      {title: 'Заметка', block: 'div', classes: 'note'},
                      {title: 'Блок', block: 'div', wrapper: true, classes: 'note-2'}
                    ],

                    plugins: "fullscreen",
                    // Theme options
                    theme_advanced_buttons1: "formatselect,|,styleselect,|,bold,italic,bullist,link,|,cut,copy,paste,|,fullscreen",
                    theme_advanced_buttons2: "",
                    theme_advanced_buttons3: "",
                    theme_advanced_blockformats: "p,h1,h2",
                    theme_advanced_toolbar_location : "top",
                    theme_advanced_toolbar_align : "left",
                    theme_advanced_statusbar_location : "bottom",
                    theme_advanced_resizing : false
                });
            }
        });
    });
</script>

